<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/weather_summary"
        style="@style/MirrorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        tools:text="Partly Cloudy" />

    <com.thbs.skycons.library.MoonView
        android:id="@+id/clear_night"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

    <com.thbs.skycons.library.SunView
        android:id="@+id/clear_day"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

    <com.thbs.skycons.library.CloudRainView
        android:id="@+id/rain"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

    <com.thbs.skycons.library.CloudSnowView
        android:id="@+id/snow"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

    <com.thbs.skycons.library.CloudHvRainView
        android:id="@+id/sleet"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

    <com.thbs.skycons.library.WindView
        android:id="@+id/wind"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

    <com.thbs.skycons.library.CloudFogView
        android:id="@+id/fog"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

    <com.thbs.skycons.library.CloudView
        android:id="@+id/cloudy"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

    <com.thbs.skycons.library.CloudSunView
        android:id="@+id/partly_cloudy_day"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

    <com.thbs.skycons.library.CloudMoonView
        android:id="@+id/partly_cloudy_night"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

    <com.thbs.skycons.library.CloudThunderView
        android:id="@+id/thunder"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:bgColor="#000000"
        app:isStatic="false"
        app:strokeColor="#ffffff" />

</LinearLayout>
